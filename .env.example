# Copy to .env and fill in your keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Choose 'openai' | 'anthropic' | 'hybrid'
MODEL_PROVIDER=openai

# OpenAI
PRIMARY_MODEL=gpt-4.1-mini
CHEAP_MODEL=gpt-4o-mini

# Anthropic
ANTHROPIC_PRIMARY=claude-3-5-sonnet-latest
ANTHROPIC_CHEAP=claude-3-5-haiku-latest

# Application Settings
ENVIRONMENT=development
DEBUG=true
HOST=127.0.0.1
PORT=8000
WORKERS=1

# Database
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///treasury_agent.db

# Observability
OBSERVABILITY_LOG_LEVEL=INFO
OBSERVABILITY_LOG_FORMAT=json
OBSERVABILITY_METRICS_ENABLED=true
OBSERVABILITY_TRACING_ENABLED=false

# Security
SECURITY_SECRET_KEY=dev-secret-key-change-in-production
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Event Bus
EVENT_BUS_MAX_RETRIES=3
EVENT_BUS_RETRY_DELAY=1.0
EVENT_BUS_BATCH_SIZE=100

# Plugins
PLUGIN_ENABLED=true
PLUGIN_AUTO_LOAD=true